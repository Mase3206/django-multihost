{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://noahsroberts.com/deploy.schema.json",
	"title": "Deploy - Django MultiHost",
	"description": "Deployment configuration file (YAML) for Django MultiHost.",
	"type": "object",
	"properties": {
		"name": {
			"description": "The name of the stack.",
			"type": "string"
		},
		"options": {
			"description": "Global options for the deployment",
			"type": "object",
			"properties": {
				"volume mount type": {
					"description": "Docker volume mount type. Default: folder. Allowed: folder.",
					"type": "string"
				}
			}
		},
		"site": {
			"description": "Site configuration",
			"type": "object",
			"properties": {
				"group name": {
					"description": "Group name",
					"type": "string"
				},
				"site path": {
					"description": "URL path of the deployed site",
					"type": "string"
				},
				"project folder": {
					"description": ""
				}
			}
		}
	},
	"required": ["name"]
}
  
  